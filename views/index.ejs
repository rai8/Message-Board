<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="/" class="brand-logo center"><%= title %></a>
      </div>
    </nav>
    <div class="message-board">
      <div class="add-message"><a href="/new" class="waves-effect waves-light btn">Write message</a></div>
      <ul class="collection with-header">
        <li class="collection-header"><h4 id="title-board">Messages</h4></li>
        <% messages.forEach(message => { %>
        <li class="collection-item avatar">
          <img src="images/avatar.png" alt="" class="circle" />

          <p>
            <span style="font-style: italic; color: gray">Msg :</span> <%= message.text%> <br />
            <span style="font-style: italic; color: gray">Author :</span> <%= message.user%>
          </p>
          <a href="#!" class="secondary-content"><i class="material-icons"><%= message.added%></i></a>
        </li>
        <% }) %>
      </ul>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>
